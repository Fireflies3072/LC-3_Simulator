<Window x:Class="LC_3_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LC_3_Simulator"
        mc:Ignorable="d"
        Title="LC-3 Simulator" Height="700" Width="1200" Background="#f0f0f0"
        WindowStyle="None" ResizeMode="CanResize">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!--窗口头部 window header-->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#e0e0e0" Name="gridHeader"
              MouseLeftButtonDown="gridHeader_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="LC-3" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Margin="20 0 10 0" Padding="0"
                   FontStyle="Italic" FontWeight="Bold" Foreground="BlueViolet"/>
            <Menu Grid.Column="1" Height="40" Background="#e0e0e0" Name="menu1">
                <MenuItem Header="File" Height="40">
                    <MenuItem Header="New File" Name="btnNewFile" Click="btnNewFile_Click"/>
                    <MenuItem Header="Open File" Name="btnOpenFile" Click="btnOpenFile_Click"/>
                    <MenuItem Header="Open Folder" Name="btnOpenFolder" Click="btnOpenFolder_Click"/>
                    <MenuItem Header="Close Folder" Name="btnCloseFolder" Click="btnCloseFolder_Click"/>
                    <MenuItem Header="Save File" Name="btnSaveFile" Click="btnSaveFile_Click"/>
                    <MenuItem Header="Save All" Name="btnSaveAll" Click="btnSaveAll_Click"/>
                </MenuItem>
            </Menu>
            <Button Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" BorderThickness="0" Margin="0 0 0 0"
                    Background="Transparent" Padding="0" Width="40" Height="40" Name="btnClose" Click="btnClose_Click">
                <Image Source="image/close.png" Width="12" Height="12" Stretch="UniformToFill" Margin="0 0 00 0"/>
            </Button>
            <Button Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" BorderThickness="0" Margin="0 0 40 0"
                    Background="Transparent" Padding="0" Width="40" Height="40" Name="btnMaximize" Click="btnMaximize_Click">
                <Image Source="image/maximize.png" Width="12" Height="12" Stretch="UniformToFill"/>
            </Button>
            <Button Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" BorderThickness="0" Margin="0 0 80 0"
                    Background="Transparent" Padding="0" Width="40" Height="40" Name="btnMinimize" Click="btnMinimize_Click">
                <Image Source="image/minimize.png" Width="12" Height="12" Stretch="UniformToFill"/>
            </Button>
        </Grid>

        <!--文件浏览 file explorer-->
        <!--https://icons8.com/icon/set/files/ios-->
        <!--https://icons8.com/icon/set/folders/ios-->
        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" BorderThickness="0 0 1 0" BorderBrush="Gray">
            <Grid Background="#f0f0f0">
                <Button Content="Open Folder" Width="100" Height="40" Background="SkyBlue" BorderThickness="0" Visibility="Visible"
                        Name="btnOpenFolder2" Click="btnOpenFolder_Click"/>
                <Label Content="" Height="35" FontSize="20" VerticalAlignment="Top" BorderThickness="0" Background="Transparent"
                       Name="lblFolder" Margin="5 5 0 0"/>
                <ListBox Margin="0 40 0 0" BorderThickness="0" Background="Transparent" Visibility="Hidden" Name="lstFolder"
                         MouseDoubleClick="lstFolder_MouseDoubleClick">
                </ListBox>
            </Grid>
        </Border>


        <!--工具栏 toolbar-->
        <!--https://icons8.com/icon/set/programming/fluency-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderThickness="0 0 1 0" BorderBrush="Gray">
                <Grid>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="10 0 0 0" BorderThickness="0"
                            ToolTip="Compile" Name="btnCompile" Click="btnCompile_Click">
                        <Image Source="image/compile.png" Width="24" Height="24"/>
                    </Button>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="50 0 10 0" BorderThickness="0"
                            ToolTip="Load OS" Name="btnLoadOS" Click="btnLoadOS_Click">
                        <Image Source="image/os.png" Width="24" Height="24"/>
                    </Button>
                </Grid>
            </Border>
            <Border Grid.Column="1" BorderThickness="0 0 1 0" BorderBrush="Gray">
                <Grid>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="10 0 0 0" BorderThickness="0"
                            ToolTip="Reload" Name="btnReload" Click="btnReload_Click">
                        <Image Source="image/reload.png" Width="20" Height="20"/>
                    </Button>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="50 0 0 0" BorderThickness="0"
                            ToolTip="Continue" Name="btnContinue" Click="btnContinue_Click">
                        <Image Source="image/continue.png" Width="20" Height="20"/>
                    </Button>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="90 0 0 0" BorderThickness="0"
                            ToolTip="Step Over" Name="btnStepOver" Click="btnStepOver_Click">
                        <Image Source="image/step_over.png" Width="20" Height="20"/>
                    </Button>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="130 0 0 0" BorderThickness="0"
                            ToolTip="Step Into" Name="btnStepInto" Click="btnStepInto_Click">
                        <Image Source="image/step_into.png" Width="20" Height="20"/>
                    </Button>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="170 0 10 0" BorderThickness="0"
                            ToolTip="Stop" Name="btnStop" Click="btnStop_Click">
                        <Image Source="image/stop.png" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Border>
            <Border Grid.Column="2" BorderThickness="0" BorderBrush="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115*"/>
                        <ColumnDefinition Width="523*"/>
                    </Grid.ColumnDefinitions>
                    <Button Width="40" Height="40" Background="Transparent" HorizontalAlignment="Left" Margin="10,0,0,0" BorderThickness="0"
                            ToolTip="Reset" Name="btnReset" Click="btnReset_Click">
                        <Image Source="image/reset.png" Width="24" Height="24"/>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <TabControl Grid.Row="2" Grid.Column="1" BorderThickness="0" Name="tc1" SelectionChanged="tc1_SelectionChanged">

        </TabControl>

        <!--https://blog.csdn.net/qq_28368039/article/details/105113927-->


    </Grid>
</Window>
